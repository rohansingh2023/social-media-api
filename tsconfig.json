{
  "compilerOptions": {
    "target": "ES2021",                                 
    "lib": [
      "esnext"
    ],                                       
    "module": "commonjs",                               
    "rootDir": "src",                                 
    "baseUrl": "./",                                
    "resolveJsonModule": true,                       
    "sourceMap": true,                            
    "outDir": "./dist",                                  
    "esModuleInterop": true,                           
    "forceConsistentCasingInFileNames": true,            
    "strict": true,                                    
    "skipLibCheck": true                             
  }
}